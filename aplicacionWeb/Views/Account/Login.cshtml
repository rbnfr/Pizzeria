<div ng-app="LoginForm">

    <md-content ng-app="LoginForm" ng-controller="CtrlLogin" layout="row" layout-align="space-around" layout-padding="layout-padding" ng-cloak="ng-cloak" class="login-form">

        <md-card flex="flex" flex-gt-sm="50" flex-gt-md="33">

            <md-toolbar>
                <div class="md-toolbar-tools">
                    <h2><span>Login</span></h2>
                </div>
            </md-toolbar>

            <md-card-content>
                <form name="Form">

                    <md-input-container class="md-block">

                        <label>Usuario</label>

                        <input type="text" name="email" ng-model="vm.formData.email" placeholder="" required="" />

                        <div ng-messages="Form.email.$error" role="alert" multiple="">
                            <div ng-message="required" class="my-message">Introduzca una dirección de correo</div>
                        </div>

                    </md-input-container>

                    <md-input-container class="md-block">

                        <label>Contraseña</label>

                        <input type="password" name="password" ng-model="vm.formData.password" placeholder="" required="" md-maxlength="16" />

                        <div ng-messages="Form.password.$error" role="alert" multiple="">
                            <div ng-message="required" class="my-message">Introduzca una contraseña</div>
                            <div ng-message="md-maxlength" class="my-message">La contraseña es demasiado larga</div>
                        </div>

                    </md-input-container>
                    <div class="md-button-group" flex="gt-xs" >
                        <md-button ng-disabled="!Form.$valid" ng-click="vm.submit()" class="md-raised md-primary"> Login </md-button>
                        <md-button ng-disabled="!Form.$valid" ng-click="vm.submit()" class="md-raised md-primary"> Login con google </md-button>
                    </div>

                </form>

            </md-card-content>

        </md-card>

    </md-content>

</div>

<script src="~/Scripts/CustomScripts/login.js"></script>

